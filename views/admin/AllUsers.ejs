<!DOCTYPE html>
<html lang="en">

<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>All Users</title>
   <link rel="stylesheet" href="/AllUsers.css">
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>

<body>
   <div id="header">
      <a href="/admin/dashboard">
         <i class="fa-solid fa-house"></i>
         <h1>Admin-Pannel</h1>
      </a>

      <div id="part2">
         <a href="/admin/about">About</a>
         <a href="/admin/contact">Contact</a>
         <a href="/admin/logout"><button>Logout</button></a>
      </div>
   </div>
<br>
   <u>
      <h1>Users</h1>
   </u>

   <form action="/admin/allUsers/1" method="GET">
      <label for="search">Search:</label>
      <input type="text" id="search" name="search">

      <label for="filter">Filter By:</label>
      <select name="filter" id="filter">
         <option value="">--Select--</option>
         <option value="Name">Name</option>
         <option value="Role">Role</option>
         <option value="Department">Department</option>
      </select>
      <button type="submit">Search</button>
      </form>

      <table border="1" cellpadding="10" cellspacing="5" style="color:purple; border: 2px solid rgb(84, 133, 133)">
         <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Department</th>
            <th>Role</th>
            <th>Actions</th>
         </tr>
         <% users.forEach(function(user) { %>
            <tr>
               <td>
                  <%= user.Name %>
               </td>
               <td>
                  <%= user.Email %>
               </td>
               <td>
                  <%= user.Phone %>
               </td>
               <td>
                  <%= user.Department.Type %>
               </td>
               <td>
                  <%= user.Role %>
               </td>
               <td>
                  <a href="/admin/editUser/<%= user._id %>"><button>Edit</button></a>
                  <a href="/admin/deleteUser/<%= user._id %>" onclick="return confirm('Are you sure you want to delete this user? This action cannot be undone.')"><button>Delete</button></a>
               </td>
            </tr>
            <% }); %>
      </table>
      <br>

      <div class="pagination">
         <a href="/admin/allUsers/<%= curr-1 %>"><button>Prev.</button></a>
         <a href="/admin/allUsers/<%= curr+1%>"><button>Next</button></a>
      </div>
</body>

<% if (message || error) { %>
   <div id="toast" style="
    position: fixed;
    top: 15px;
    right:45%;
    z-index: 1000;
    background: #28a745;
    color: white;
    padding: 12px 20px;
    border-radius: 6px;
    font-size: 15px;
    box-shadow: 0px 2px 8px rgba(0,0,0,0.2);
">
      <%= message || error %>
   </div>

   <script>
      setTimeout(() => {
         document.getElementById('toast').style.display = "none";
      }, 3000);
   </script>

   <% } %>

</html>