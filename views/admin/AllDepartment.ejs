<!DOCTYPE html>
<html lang="en">

<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>All Department</title>
   <link rel="stylesheet" href="/AllDepartment.css">
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>

<body>
   <div id="header">
      <a href="/admin/dashboard">
         <i class="fa-solid fa-house"></i>
         <h1>Admin-Pannel</h1>
      </a>

      <div id="part2">
         <a href="/admin/about">About</a>
         <a href="/admin/contact">Contact</a>
         <a href="/admin/logout"><button>Logout</button></a>
      </div>
   </div>
   <u>
      <h1>Departments</h1>
   </u>

   <form action="/admin/Departments/1" method="GET" id="searchForm">
      <label for="search">Search:</label>
      <input type="text" id="search" name="search">

      <label for="filter">Filter By:</label>
      <select name="filter" id="filterSelect">
         <option value=""></option>
         <option value="Name">Name</option>
         <option value="Type">Type</option>
         <option value="Address">Address</option>
      </select>

      <button type="submit">Search</button>
      <br><br>
   </form>

   <table border="1" cellpadding="10" cellspacing="5" style="color:purple; border: 2px solid rgb(84, 133, 133)">
      <tr>
         <th>Name</th>
         <th>Type</th>
         <th>Address</th>
         <th>Actions</th>
      </tr>
      <% departments.forEach(function(dept) { %>
         <tr>
            <td>
               <%= dept.Name %>
            </td>
            <td>
               <%= dept.Type %>
            </td>
            <td>
               <%= dept.Address %>
            </td>
            <td>
               <a href="/admin/departments/edit/<%= dept._id %>"><button>Edit</button></a>
               <button onclick="handleDelete('<%= dept._id %>')">Delete</button>
            </td>
         </tr>
         <% }); %>
   </table>
   <br>
   <div class="pagination">
      <a href="/admin/Departments/<%= curr-1 %>?search=<%= search %>&filter=<%= filter %>"><button>Prev</button></a>
      <a href="/admin/Departments/<%= curr+1 %>?search=<%= search %>&filter=<%= filter %>"><button>Next</button></a>
   </div>

</body>

<% if (message || error) { %>
   <div id="toast" style="
    position: fixed;
    top: 15px;
    right: 45%;
    background: #28a745;
    color: white;
    padding: 12px 20px;
    border-radius: 6px;
    font-size: 15px;
    box-shadow: 0px 2px 8px rgba(0,0,0,0.2);
">
      <%= message || error %>
   </div>

   <script>
      setTimeout(() => {
         document.getElementById('toast').style.display = "none";
      }, 3000);
   </script>
   <% } %>

      <script>
         async function handleDelete(deptId) {
            const response = await fetch(`/admin/Departments/checkUsers/${deptId}`);
            const data = await response.json();
            if (data.exists) {
               const ok = confirm("Users are assigned to this department. Do you want to delete it?");
               if (!ok) return;
            }
            window.location.href = `/admin/departments/delete/${deptId}`;
         }
      </script>

</html>